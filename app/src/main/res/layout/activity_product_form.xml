<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.activity.ProductFormActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/form_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="25sp"
            android:text="New Item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/form_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Product name"
            app:layout_constraintEnd_toEndOf="@id/form_title"
            app:layout_constraintStart_toStartOf="@id/form_title"
            app:layout_constraintTop_toBottomOf="@id/form_title" />

        <EditText
            android:id="@+id/form_product_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Product description"
            app:layout_constraintEnd_toEndOf="@id/form_product_name"
            app:layout_constraintStart_toStartOf="@id/form_product_name"
            app:layout_constraintTop_toBottomOf="@id/form_product_name" />

        <EditText
            android:id="@+id/form_product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="R$ 0.00"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="@id/form_product_name"
            app:layout_constraintStart_toStartOf="@id/form_product_name"
            app:layout_constraintTop_toBottomOf="@id/form_product_description" />

        <Button
            android:id="@+id/bt_form_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Confirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/form_product_price"
            app:layout_constraintVertical_bias="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>